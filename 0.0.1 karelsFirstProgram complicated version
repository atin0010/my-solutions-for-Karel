void karelsFirstProgram() {
    repeat(4) {
        
        if (frontIsClear()) {
            if (onBeeper()) {
                pickBeeper();
            }
            else {
                moveForward();
            }
        }
        else {
            goUpStairLeft();
        }
    }
    dropBeeper();
    moveForward();
}
void goUpStairLeft() {
    turnLeft();
    moveForward();
    turnRight();
    moveForward();
}
